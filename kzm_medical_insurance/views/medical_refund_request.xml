<odoo>
    <!--tree-->
    <record id="view_medical_refund_request_tree_1" model="ir.ui.view">
        <field name="name">medical.refund.request.tree</field>
        <field name="model">medical.refund.request</field>
        <field name="arch" type="xml">
            <tree>

                <field name="name"/>
                <field name="employee_id"/>
                <field name="date"/>
                <field name="adherent_folder" />
                <field name="state" />
            </tree>
        </field>
    </record>
    <!--search-->

    <!--form-->
    <record id="view_medical_refund_request_form_1" model="ir.ui.view">
        <field name="name">medical.refund.request.form</field>
        <field name="model">medical.refund.request</field>
        <field name="arch" type="xml">
            <form string="Medical refund request">
                  <header>
                    <field
                        name="state"
                        widget="statusbar"
                        statusbar_visible="draft,submited,verified,validated,refused"
                        statusbar_colors='{"approved":"blue"}'
                        options="{'clickable': '1'}"
                    />
                </header>
                <sheet>
                    <h1>
                        <field name="name" readonly="1"/>
                    </h1>
                    <group>
                    <group>

                        <field name="employee_id"/>
                        <field name="date"/>
                        <field name="adherent_folder"/>
                        <field name="patient_full_name" domain="[('employee_id','=',employee_id)]" attrs="{'invisible': [('adherent_folder', '!=', True)], 'required': [('adherent_folder', '=', True)]}"/>
                    </group>
                    <group>

                        <field name="nature_of_the_disease"/>
                        <field name="contribution_amount"/>
                     </group>
                    </group>
                        <notebook>
                            <page string="Medical Prestation">
                            <group>
                            <field name="medical_presentation_ids">
                        <tree editable="bottom">
                                <field name="type_id"/>
                                <field name="description"/>
                                <field name="amount"/>
                                <field name="date"/>
                                <field name="attachment_ids" widget="many2many_binary"/>
                                <field name="refund_request_id"/>
                            </tree>
                        </field>
                                 <group class="oe_subtotal_footer oe_right" colspan="2">
                              <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                                        <label for="total"/>
                                    </div>
                                    <field name="total" nolabel="1" class="oe_subtotal_footer_separator" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                    <field name="difference"/>
                                 </group>
                         </group>
                            </page>
                        </notebook>


                </sheet>
                <div class="o_attachment_preview"/>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <!--action-->

    <record id="medical_refund_request_menu_8" model="ir.actions.act_window">
        <field name="name">Medical refund request</field>
        <field name="res_model">medical.refund.request</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Create a new payments
            </p>
        </field>
    </record>



</odoo>