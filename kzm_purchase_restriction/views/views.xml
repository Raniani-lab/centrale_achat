<odoo>
  <data>
      <record id="kzmpurchase_product_template_form_view_inherit" model="ir.ui.view">
            <field name="name">product.template.form.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='list_price']" position="attributes">
                    <attribute name="groups">purchase.group_purchase_manager</attribute>
                </xpath>

                <xpath expr="//page[@name='sales']" position="attributes">
                    <attribute name="groups">purchase.group_purchase_manager</attribute>
                </xpath>

            </field>
      </record>

    <record id="kzm_product_template_tree_view_inherit" model="ir.ui.view">
            <field name="name">product.template.tree.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='list_price']" position="attributes">
                    <attribute name="groups">purchase.group_purchase_manager</attribute>
                </xpath>
            </field>
    </record>


    <record id="kzm_product_product_tree_view_inherit" model="ir.ui.view">
            <field name="name">product.product.tree.inherit</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="account.product_product_view_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='lst_price']" position="attributes">
                    <attribute name="groups">purchase.group_purchase_manager</attribute>
                </xpath>
            </field>
    </record>


  </data>
</odoo>