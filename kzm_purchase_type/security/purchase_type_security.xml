<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="local_purchase_group" model="res.groups">
            <field name="name">Local purchase</field>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
        </record>

        <record id="import_purchase_group" model="res.groups">
            <field name="name">Import purchase</field>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
        </record>

        <record id="local_purchase_rule" model="ir.rule">
            <field name="name">local.purchase.rule</field>
            <field name="model_id" ref="purchase.model_purchase_order"/>
            <field name="domain_force">[('purchase_type', '=', 'local')]</field>
            <field name="groups" eval="[(4, ref('local_purchase_group'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_delete" eval="False"/>
        </record>

        <record id="import_purchase_rule" model="ir.rule">
            <field name="name">import.purchase.rule</field>
            <field name="model_id" ref="purchase.model_purchase_order"/>
            <field name="domain_force">[('purchase_type', '=', 'import')]</field>
            <field name="groups" eval="[(4, ref('import_purchase_group'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_delete" eval="False"/>
        </record>

</odoo>
