<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record model="ir.ui.view" id="purchase_order_form">
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form" />
        <field name="arch" type="xml">
            <field name="partner_ref" position="after">
                <field name="purchase_type" readonly="1"/>
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="purchase_order_landed_cost_form">
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase_landed_cost.purchase_order_form" />
        <field name="arch" type="xml">
            <button name="action_open_landed_cost" position="attributes">
                <attribute name="attrs">{'invisible': [('purchase_type', '=', 'local')]}</attribute>
            </button>
        </field>
    </record>

    <record model="ir.ui.menu" id="purchase_landed_cost.menu_purchase_cost_control">
        <field name="groups_id" eval="[(6,0,[ref('kzm_purchase_type.import_purchase_group')])]"/>
    </record>

    <record model="ir.ui.menu" id="purchase.menu_purchase_rfq">
        <field name="groups_id" eval="[(6,0,[ref('kzm_purchase_type.local_purchase_group')])]"/>
    </record>

    <record model="ir.ui.menu" id="purchase.menu_purchase_form_action">
        <field name="groups_id" eval="[(6,0,[ref('kzm_purchase_type.local_purchase_group')])]"/>
    </record>

    <record id="purchase.purchase_rfq" model="ir.actions.act_window">
        <field name="context">{'search_default_todo':1, 'show_purchase': False, 'default_purchase_type':'local'}</field>
        <field name="domain">[('state','in',('draft','sent','bid','cancel', 'confirmed')), ('purchase_type','=','local')]</field>
    </record>

    <record id="purchase.purchase_form_action" model="ir.actions.act_window">
        <field name="context">{'search_default_todo':1, 'show_purchase': True, 'default_purchase_type':'local'}</field>
        <field name="domain">[('state','not in',('draft','sent','bid', 'confirmed')), ('purchase_type','=','local')]</field>
    </record>

