<?xml version="1.0"?>
<odoo>
    <record id="view_ref_config_form_inherit" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.referencement</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="priority">3</field>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="Referencement" string="Referencement"
                     data-key="kzm_referencement_v"
                     groups="kzm_referencement_v.group_ref_manager">
                    <h2>Approbation</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="approb_def1"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="approb_def1"/>
                                <span class="fa fa-lg fa-building-o" title="Values set here are company-specific."
                                      aria-label="Values set here are company-specific."
                                      groups="base.group_multi_company" role="img"/>
                                <div class="text-muted">
                                    Set the default approver for your referencement requests
                                </div>
                                <div class="content-group" attrs="{'invisible': [('approb_def1', '=', False)]}">
                                    <div class="row mt16">
                                        <label for="default_ref_responsible" class="col-lg-4 o_light_label"/>
                                        <field name="default_ref_responsible"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
            </field>
        </record>

    <record id="action_ref_configuration" model="ir.actions.act_window">
        <field name="name">Settings</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_id" ref="view_ref_config_form_inherit"/>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module' : 'kzm_referencement_v'}</field>
    </record>
</odoo>
