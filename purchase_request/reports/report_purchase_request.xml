<odoo>

<template id="report_purchase_request">
    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="o">
            <t t-call="web.external_layout">
                <div class="page">
                    <div class="oe_structure"/>

                    <h2>Purchase Request <span t-field="o.name"/></h2>

                    <div class="row mt32 mb32">
                        <div t-if="o.name" class="col-3 bm-2">
                            <strong>Request Reference:</strong>
                            <p t-field="o.name" class="m-0"/>
                        </div>
                        <div t-if="o.date_start" class="col-3 bm-2">
                            <strong>Creation Date:</strong>
                            <p t-field="o.date_start" class="m-0"/>
                        </div>
                        <div t-if="o.requested_by" class="col-3 bm-2">
                            <strong>Requested by:</strong>
                            <p t-field="o.requested_by" class="m-0"/>
                        </div>
                        <div t-if="o.assigned_to" class="col-3 bm-2">
                            <strong>Assigned to:</strong>
                            <p t-field="o.assigned_to" class="m-0"/>
                        </div>
                    </div>
                    <div class="row mt32 mb32">
                        <div t-if="o.description" class="col-3 bm-2">
                            <strong>Description:</strong>
                            <p t-field="o.description" class="m-0"/>
                        </div>
                        <div t-if="o.origin" class="col-3 bm-2">
                            <strong>Source:</strong>
                            <p t-field="o.origin" class="m-0"/>
                        </div>
                        <div t-if="o.picking_type_id" class="col-3 bm-2">
                            <strong>Picking Type:</strong>
                            <p t-field="o.picking_type_id" class="m-0"/>
                        </div>
                    </div>

                    <t t-if="o.line_ids">
                        <h3>Products</h3>
                        <table class="table table-condensed">
                            <thead>
                                <tr>
                                    <th><strong>Description</strong></th>
                                    <th groups="analytic.group_analytic_accounting">
                                        <strong>Analytic Account</strong>
                                    </th>
                                    <th class="text-right"><strong>Qty</strong></th>
                                    <th class="text-center" groups="product.group_uom">
                                        <strong>Product UoM</strong>
                                    </th>
                                    <th class="text-right"><strong>Requested Date</strong></th>
                                    <th><strong>Specifications</strong></th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="o.line_ids" t-as="line_ids">
                                    <td>
                                        <span t-field="line_ids.name"/>
                                    </td>
                                    <td groups="analytic.group_analytic_accounting">
                                        <span t-field="line_ids.analytic_account_id"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="line_ids.product_qty"/>
                                    </td>
                                    <t>
                                        <td class="text-center" groups="product.group_uom">
                                            <span t-field="line_ids.product_uom_id.category_id.name"/>
                                        </td>
                                    </t>
                                    <td class="text-right">
                                        <span t-field="line_ids.date_required"/>
                                    </td>
                                    <td>
                                        <span t-field="line_ids.specifications"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </t>
                    <div class="oe_structure"/>
                </div>
            </t>
        </t>
    </t>
</template>

</odoo>
